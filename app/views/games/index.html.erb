<h1 class="current-category"><%= params[:category] %></h1>

<% if @games.count == 0 %>
  <h3>There are no games in this category</h3>
<% else %>
<div class="container-fluid">
  <% @games.each do |game| %>
    <div class="col-md-3 col-sm-6">
      <a href="/games/ <%= game.id %>">
        <%= image_tag game.game_img.url(:game_index), class: "game" %>
      </a>
    </div>
  <% end %>
 </div>
<% end %>


