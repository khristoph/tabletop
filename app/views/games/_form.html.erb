<%= simple_form_for @game do |f| %>
  <%= f.file_field :game_img %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>
  <%= f.input :title, label: "Game Title" %>
  <%= f.input :description %>
  <%= f.input :creator %>
  <%= f.input :rule_link %>
  <%= f.button :submit %>
<% end %>