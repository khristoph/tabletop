<div class="review">
  <p> <%= review.user.username %> </p>
  <div class="review-rating" data-score="<%= review.rating %>"> </div>

  <p> <%= review.created_at.strftime("%B #{review.created_at.day.ordinalize}, %Y") %>   </p>

  <p class="review-comment"><%= review.comment %> </p>

  <% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
      <div class="links btn-group">
        <%= link_to "Edit", edit_game_review_path(review.game, review), class: "btn btn-custom" %>

        <%= link_to "Delete", game_review_path(review.game, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
      </div>
    <% end %>
  <% end %>
</div>